<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="model"
            type="com.htnguyen.gplxapp.model.ExamResult" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_all"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:text="@{model.number.toString()}"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:background="@{!model.isSelected ? @drawable/bg_circle : @drawable/bg_circle_green}"
                android:textSize="@dimen/_13ssp"
                android:layout_marginVertical="@dimen/_4sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{model.answer}"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:padding="@dimen/_8sdp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/grey"/>

    </LinearLayout>

</layout>