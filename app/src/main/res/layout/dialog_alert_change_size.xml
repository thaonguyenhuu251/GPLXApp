<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_top"
    android:gravity="center"
    android:padding="@dimen/_10sdp"
    android:orientation="vertical">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="@dimen/_14ssp"
        android:textColor="?android:textColorPrimary"
        android:text="@string/change_size_text_and_mode"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/md_black_1000_50"
        android:layout_gravity="start"
        android:text="@string/change_content"/>

    <LinearLayout
        android:id="@+id/rgMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_10sdp"
        android:background="@drawable/bg_rounded_gray"
        android:backgroundTint="@color/md_grey_100"
        android:paddingVertical="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rdLight"
            style="@style/text_normal"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/light_mode"
            android:background="@android:color/transparent"
            app:drawableTopCompat="@drawable/ic_setting_light" />

        <TextView
            android:id="@+id/rdDark"
            style="@style/text_normal"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/dark_mode"
            android:background="@android:color/transparent"
            app:drawableTopCompat="@drawable/ic_setting_dark" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_positive"
            style="@style/myColoredButton"
            android:text="@string/cancel"
            android:textColor="@color/primary_dark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="0dp"
            android:layout_weight="1" />
        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/grey"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_negative"
            style="@style/myColoredButton"
            android:text="@string/agree"
            android:textColor="@color/primary_dark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginHorizontal="0dp"
            android:layout_weight="1"/>
    </LinearLayout>


</LinearLayout>