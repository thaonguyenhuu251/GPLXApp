<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_top"
    android:gravity="center"
    android:padding="@dimen/_10sdp"
    android:orientation="vertical">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="@dimen/_14ssp"
        android:textColor="?android:textColorPrimary"
        android:text="Thay đổi kích thước chữ và chế độ nề tối"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/grey"
        android:text="Ấn biểu tượng menu bên trái trên cùng màn hình trang chủ -> vào Cài đặt ứng dụng để thay đổi kích thước phông chữ và chế độ hiển thị. Chọn chế độ nề tối để bảo vệ mắt của bạn đỡ mỏi khi ôn thi trong 1 thời gian dài"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_positive"
            style="@style/myColoredButton"
            android:text="HUỶ BỎ"
            android:textColor="@color/text_green"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="0dp"
            android:layout_weight="1" />
        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/grey"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_negative"
            style="@style/myColoredButton"
            android:text="ĐỒNG Ý"
            android:textColor="@color/text_green"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginHorizontal="0dp"
            android:layout_weight="1"/>
    </LinearLayout>


</LinearLayout>